{
  "include": ["src", "@types", "dev", "jest.setup.ts"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "plus": ["src/plus/index.ts"]
    },
    "plugins": [
      {
        "name": "typescript-plugin-css-modules",
        "options": {
          "customMatcher": "scss$",
          "noUncheckedIndexedAccess": true
        }
      }
    ],
    "jsx": "react-jsx",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "target": "ES6",
    "outDir": "dist",
    "declaration": true,
    "skipLibCheck": true,
    "noEmit": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "allowUnreachableCode": false
  }
}
